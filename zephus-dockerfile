FROM node:16.17-alpine

ARG FONT_AWESOME_TOKEN
ENV FONT_AWESOME_AUTH_TOKEN=$FONT_AWESOME_TOKEN

RUN apk update && \
    apk upgrade --available && \
    apk add --no-cache git && \
    npm install -g pm2

WORKDIR /app

COPY package*.json ./

RUN npm ci

COPY . .

#RUN npm run build

CMD ["pm2-runtime", "start", "npm", "--", "start"]
